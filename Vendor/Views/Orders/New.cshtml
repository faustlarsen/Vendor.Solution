@{
  Layout = "_Layout";
}
<div class="container card">
  <h2>ADD NEW ORDER FOR THE <em><strong>@Model.Name</strong></em> VENDOR</h2>
    <form action="/vendor/@Model.Id/order" method="post">
      <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <br>
      <br>
      <input id="orderTitle" name="orderTitle" type="text">
      <label for="orderTitle">TITLE</label>
      <br>
      <br>
      <input id="orderDescription" name="orderDescription" type="text">
      <label for="orderDescription">DESCRIPTION</label>
      <br>
      <br>
      <input id="orderPrice" name="orderPrice" type="text">
      <label for="orderPrice">PRICE</label>
      <br>
      <br>
      <input id="orderDate" name="orderDate" type="text">
      <label for="orderDate">DATE</label>
      <br>
      <br>
      <button class="btn btn-primary" type="submit">SUBMIT</button>
      <br>
      <br>
    </form>
</div>