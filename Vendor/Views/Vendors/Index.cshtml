@using VendorTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendor/@vendor.Id'>  @vendor.Name</a> | @vendor.Description</h3>
}

<h5><a href='/vendor/new'>Add a new Vendor</h5>
<h5><a href='/'>Back home</a></h5>