@{
  Layout = "_Layout";
}
@using VendorTracker.Models;
<div class="container card">
    <h1>VENDOR'S LIST</h1>
    @if (@Model.Count == 0)
    {
      <h3>Add your first vendor.</h3>
    }
    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>  @vendor.Name</a> - @vendor.Description</h3>
    }
    <br>
    <br>
    <p><a href='/vendor/new'><strong>ADD NEW VENDOR</strong></p>
    <form action="/vendors/delete" method="post">
        <button type="submit" class="btn btn-primary" name="button">CLEAR</button>
        <br>
        <br>
    </form>
</div>